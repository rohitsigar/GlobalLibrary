<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/main_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.GeneralActivity">


   <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.GeneralActivity">
        <LinearLayout
            android:layout_marginLeft="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <!--            <androidx.appcompat.widget.Toolbar-->
<!--                android:id="@+id/toolbar"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:background="#8278cf"-->
<!--                android:minHeight="?attr/actionBarSize"-->
<!--                android:theme="?attr/actionBarTheme" />-->


            <include
                android:id="@+id/toolbar"
                layout="@layout/main_page_toolbar"
                app:layout_collapseMode="pin" />

            <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>



            <com.ismaeldivita.chipnavigation.ChipNavigationBar
                android:id="@+id/bottom_navbar_student"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_height="50dp"

                android:background="@color/white"
                app:cnb_menuResource="@menu/bottom_nav_menu_student"
                app:cnb_unselectedColor="@color/black"
                android:visibility="gone"
                app:cnb_radius="8dp"
                app:cnb_orientationMode="horizontal"
                android:layout_marginBottom="10dp" />
            <com.ismaeldivita.chipnavigation.ChipNavigationBar
                android:id="@+id/bottom_navbar_branch"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_height="50dp"
                android:background="@color/white"
                app:cnb_menuResource="@menu/bottom_nav_menu_branch"
                app:cnb_unselectedColor="@color/black"
                app:cnb_radius="8dp"
                app:cnb_orientationMode="horizontal"
                android:layout_marginBottom="10dp" />
        </LinearLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/slider"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@menu/header_slider"
            app:menu="@menu/slider_menu" />
    </androidx.drawerlayout.widget.DrawerLayout>
</LinearLayout>