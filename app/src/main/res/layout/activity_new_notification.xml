<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    android:contentDescription="For more ui/ux visit www.materialuiux.com"
    android:orientation="vertical"
    tools:context=".Activity.NewNotification"
    tools:ignore="HardcodedText">
    <!--  include  Toolbar -->
    <include
        android:id="@+id/id_toolbar_new_notification"
        layout="@layout/layout_new_notification"
        app:layout_collapseMode="pin" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginStart="27.9dp"
                android:layout_marginEnd="30dp"
                android:layout_height="200dp"
                android:background="@drawable/notice_background1"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_undraw_observations_re_ohja"/>

            </LinearLayout>

            <!-- Title -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/notice_background"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="40dp"
                    android:fontFamily="@font/quicksand_regular"
                    android:layout_marginEnd="40dp"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/color_primary_text"
                    android:text="Title of notification"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/quicksand_regular"
                    android:background="@drawable/newbar_background"
                    android:textColorHint="@color/color_secondary_text"
                    android:id="@+id/title_new_notification"
                    android:filterTouchesWhenObscured="true"
                    android:textCursorDrawable="@color/black"
                    android:textAlignment="textStart"
                    android:padding="15dp"
                    android:hint="Title"
                    android:textColor="@color/more_dark_main_color"
                    android:textSize="17sp" />

                <!-- body  -->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="For more ui/ux visit www.materialuiux.com"
                    android:text="Add description"
                    android:textAlignment="textStart"
                    android:fontFamily="@font/quicksand_regular"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/color_primary_text" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/quicksand_regular"
                    android:background="@drawable/newbar_background"
                    android:gravity="top"
                    android:textColorHint="@color/color_secondary_text"
                    android:id="@+id/body_new_notification"
                    android:contentDescription="For more ui/ux visit www.materialuiux.com"
                    android:minHeight="50dp"
                    android:text=""
                    android:padding="20dp"
                    android:textStyle="normal"
                    android:hint="Write here!"
                    android:textColor="@color/more_dark_main_color"
                    android:textCursorDrawable="@color/black"
                    android:textSize="17sp"
                    android:theme="@style/cutomTextstyle"
                    tools:ignore="RtlHardcoded" />
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_marginTop="20dp"
                    app:strokeColor="@color/scrl"
                    app:cornerRadius="10dp"
                    android:id="@+id/send_new_notification"
                    android:paddingRight="60dp"
                    android:paddingLeft="60dp"
                    android:text="Add"
                    android:textAllCaps="false"
                    android:fontFamily="@font/quicksand_regular"
                    android:textSize="20dp"
                    app:rippleColor="@color/dark_main_color"
                    android:textStyle="bold"
                    android:textColor="@color/dark_main_color"
                    app:strokeWidth="3dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:layout_gravity="center"/>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>





</LinearLayout>