<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--  back  -->
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="34dp"
            android:id="@+id/return_to_studentPallet"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_left_arrow" />

        <!--  Title Toolbar  -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Student Details"
            android:textColor="@color/color_third_text"
            android:textSize="18dp" />

        <!--         Check Done   -->
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="34dp"
            android:id="@+id/attandance_student_pallet"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/profile_a" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="34dp"
            android:id="@+id/home_student_pallet"
            android:background="@android:color/transparent"
            android:visibility="gone"
            app:srcCompat="@drawable/home_student_pallet" />
    </RelativeLayout>
</RelativeLayout>