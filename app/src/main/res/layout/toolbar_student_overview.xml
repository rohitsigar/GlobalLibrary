<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/main_color"
        android:layout_height="match_parent">

        <!--  back  -->
        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:tint="@color/dark_main_color"
            android:scaleType="centerCrop"
            android:layout_marginLeft="34dp"
            android:id="@+id/return_to_studentPallet"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_left_arrow" />

        <!--  Title Toolbar  -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/roboto_regular"
            android:textStyle="normal"
            android:text="Student Details"
            android:textColor="@color/dark_main_color"
            android:textSize="25dp" />

        <!--         Check Done   -->
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="34dp"
            android:scaleType="fitXY"
            android:tint="@color/dark_main_color"
            android:id="@+id/attandance_student_pallet"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_profile_icon" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="34dp"
            android:id="@+id/home_student_pallet"
            android:background="@android:color/transparent"
            android:visibility="gone"
            app:srcCompat="@drawable/home_student_pallet" />
    </RelativeLayout>
</RelativeLayout>