<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    android:padding="@dimen/box_inset_layout_padding"
    android:orientation="vertical"
    tools:context=".Activity.QuizReportStudent">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_quiz_report"
        app:layout_collapseMode="pin" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="10dp"
        android:elevation="12dp"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="20dp"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/student_image_quiz_report"
                android:src="@drawable/ic_student__1_"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Student Name"
                android:textSize="16sp"
                android:id="@+id/student_name_quiz_report"
                android:padding="10dp"
                android:textStyle="bold"
                android:textColor="@color/dark_main_color"
                android:layout_gravity="center"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Branch Name"
                android:textSize="13sp"
                android:textStyle="bold"
                android:id="@+id/branch_name_quiz_report"
                android:textColor="@color/dark_main_color"
                android:layout_gravity="center"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/main_color"
                android:weightSum="100"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:background="@color/white"
                    android:layout_marginEnd="1dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:layout_marginTop="20dp"
                        android:textSize="16sp"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:textColor="@color/dark_main_color"
                        android:layout_gravity="center"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="Quiz Performed"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp"
                        android:textColor="@color/dark_main_color"
                        android:layout_gravity="center"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="13sp"
                        android:id="@+id/total_quiz_quiz_report"
                        android:textStyle="bold"
                        android:textColor="@color/dark_main_color"
                        android:layout_gravity="center"
                        android:gravity="center"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:background="@color/white"
                    android:layout_marginStart="1dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Overall"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:layout_marginTop="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/dark_main_color"
                        android:layout_gravity="center"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Performance"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:layout_marginBottom="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/dark_main_color"
                        android:layout_gravity="center"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0 %"
                        android:textSize="13sp"
                        android:id="@+id/performance_quiz_report"
                        android:textStyle="bold"
                        android:textColor="@color/dark_main_color"
                        android:layout_gravity="center"
                        android:gravity="center"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Overview"
        android:textColor="@color/dark_main_color"
        android:textStyle="bold"
        android:textSize="18dp"
        android:padding="10dp"/>
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:id="@+id/progress_bar_10"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:src="@drawable/animation_500_ksoc1ua4"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/report_quiz_student"/>
    <TextView
        android:id="@+id/text_view_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="No Quiz Given"
        android:textSize="25dp"
        android:visibility="gone"
        android:textColor="@color/dark_main_color"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center"></TextView>

</LinearLayout>