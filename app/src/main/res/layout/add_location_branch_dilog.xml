<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate QR Code"
            android:fontFamily="@font/roboto_regular"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/dark_main_color"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/newbar_background"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/quicksand_regular"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/dark_main_color"
                android:text="Make Sure to Generate New Qr Code Everyday"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/openinig_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_regular"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/more_dark_main_color"
                    android:textColorHint="@color/dark_main_color"
                    android:hint="00"
                    android:inputType="number" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/more_dark_main_color"
                    android:textColorHint="@color/dark_main_color"
                    android:fontFamily="@font/quicksand_regular"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text=":"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:inputType="number"
                    android:fontFamily="@font/quicksand_regular"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:textColor="@color/more_dark_main_color"
                    android:textColorHint="@color/dark_main_color"
                    android:hint="00"
                    android:id="@+id/openinig_minute"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/quicksand_regular"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/more_dark_main_color"
                    android:textColorHint="@color/dark_main_color"
                    android:layout_height="wrap_content"
                    android:text="To"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_regular"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:inputType="number"
                    android:textColor="@color/more_dark_main_color"
                    android:textColorHint="@color/dark_main_color"
                    android:hint="00"
                    android:id="@+id/closing_hour"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/quicksand_regular"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:textColor="@color/more_dark_main_color"
                    android:textColorHint="@color/dark_main_color"
                    android:text=":"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:fontFamily="@font/quicksand_regular"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/more_dark_main_color"
                    android:textColorHint="@color/dark_main_color"
                    android:hint="00"
                    android:id="@+id/closing_minute"/>

            </LinearLayout>

        </LinearLayout>


        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:indeterminateTint="@color/black"
            android:id="@+id/progressbar_location"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonOk"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/quicksand_regular"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:textStyle="bold"
             app:cornerRadius="10dp"
            app:strokeWidth="3dp"
            app:rippleColor="@color/main_color"
            android:textColor="@color/dark_main_color"
            android:backgroundTint="@color/white"
            app:strokeColor="@color/scrl"
            style="?attr/materialButtonOutlinedStyle"
            android:text="Generate" />

    </LinearLayout>

</LinearLayout>