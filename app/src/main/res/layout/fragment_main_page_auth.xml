<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.MainPageAuthFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        android:background="@drawable/background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/fjalla_one"
                android:text="GLOBAL LIBRARY"
                android:textColor="#977070"
                android:textSize="30dp"
                android:textStyle="bold" />
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/sliding_tabs_auth"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="80dp"
            app:tabBackground="@android:color/transparent"
            app:tabIndicatorColor="#ff9e7f"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/color_primary_text"
            app:tabTextAppearance="@style/MyCustomTextAppearance"
            app:tabTextColor="@color/color_secondary_text" />


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPagerAuth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">



        </androidx.viewpager.widget.ViewPager>

    </LinearLayout>


</FrameLayout>