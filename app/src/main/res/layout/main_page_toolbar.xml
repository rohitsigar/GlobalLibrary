<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:background="@color/main_color"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="100">


            <!--  back  -->
            <ImageButton
                android:id="@+id/Slider_menu"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_weight="10"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_menu__5_" />


            <!--  Title Toolbar  -->

            <TextView
                android:id="@+id/main_text_branch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_weight="80"
                android:gravity="center"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto_regular"
                android:textStyle="normal"
                android:text="My Profile"
                android:layout_gravity="center"
                android:textColor="#50599b"
                android:textSize="25dp"
                tools:ignore="RtlCompat" />

            <RelativeLayout
                android:id="@+id/id_ProfileImage_RelativeLayout"
                android:layout_width="0dp"
                android:layout_marginEnd="25dp"
                android:layout_weight="10"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <!--  Profile Image -->

<!--                <com.mikhaellopez.circularimageview.CircularImageView-->
<!--                    android:id="@+id/toolbar_branch_Image"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:layout_centerHorizontal="true"-->
<!--                    android:layout_centerVertical="true"-->
<!--                    android:layout_centerInParent="true"-->
<!--                    android:src="@drawable/image"-->
<!--                    app:civ_border_color="#EEEEEE"-->
<!--                    app:civ_shadow="true"-->
<!--                    app:civ_shadow_color="#f4f5f9"-->
<!--                    app:civ_shadow_radius="10" />-->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/add_new_notification"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:backgroundTint="@color/main_color"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    android:textAllCaps="false"
                    app:icon="@drawable/ic_add_notice"
                    app:iconGravity="textEnd"
                    app:iconSize="55dp"
                    app:iconTint="@color/dark_main_color"
                    app:rippleColor="@color/main_color"
                    app:strokeWidth="0dp" />
                <com.google.android.material.button.MaterialButton
                    android:layout_width="40dp"
                    android:layout_gravity="center"
                    app:iconTint="@color/dark_main_color"
                    app:strokeColor="@color/zxing_transparent"
                    android:layout_height="40dp"
                    android:textAllCaps="false"
                    app:iconSize="30dp"
                    android:text=""
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/past_quiz"
                    app:iconGravity="textEnd"
                    app:icon="@drawable/ic_checklist"
                    android:textStyle="bold"
                    style="?attr/materialButtonOutlinedStyle"
                    android:visibility="visible"/>
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/home_toolbar"
                    android:visibility="gone"
                    android:scaleType="centerCrop"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:tint="#50599b"
                    android:backgroundTint="@color/zxing_transparent"
                    android:src="@drawable/ic_home_icon"/>
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/nav_toolbar"
                    android:scaleType="centerCrop"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:visibility="visible"
                    android:tint="#50599b"
                    android:backgroundTint="@color/zxing_transparent"
                    android:src="@drawable/ic_notice_icon"/>
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/nav_toolbar_registred"
                    android:scaleType="centerCrop"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:visibility="gone"
                    android:tint="#50599b"
                    android:backgroundTint="@color/zxing_transparent"
                    android:src="@drawable/ic_registred_icon"/>
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/ic_profile_icon"
                    android:id="@+id/profile_toolbar"
                    android:tint="@color/dark_main_color"
                    android:visibility="gone"
                    android:backgroundTint="@color/main_color" />
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/ic_branch_profile_icon"
                    android:id="@+id/profile_branch_toolbar"
                    android:tint="@color/dark_main_color"
                    android:visibility="gone"
                    android:backgroundTint="@color/main_color" />
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/ic_check"
                    android:id="@+id/nav_toolbar_attendence"
                    android:tint="@color/dark_main_color"
                    android:visibility="gone"
                    android:backgroundTint="@color/main_color" />
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_setting_icon"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/fee_toolbar"
                    android:scaleType="centerCrop"
                    android:tint="@color/dark_main_color"
                    android:visibility="gone"
                    android:backgroundTint="@color/main_color" />
        </RelativeLayout>

        </LinearLayout>

    </LinearLayout>



</androidx.appcompat.widget.Toolbar>



