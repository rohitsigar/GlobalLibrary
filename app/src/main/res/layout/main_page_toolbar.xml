<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:background="@drawable/shape_of_bottom_nav_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="100">


            <!--  back  -->
            <ImageButton
                android:id="@+id/Slider_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="0dp"
                android:layout_weight="40"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_menu" />


            <!--  Title Toolbar  -->

            <TextView
                android:id="@+id/main_text_branch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_weight="30"
                android:text="My Profile"
                android:layout_marginLeft="40dp"
                android:layout_gravity="center"
                android:textColor="@color/color_third_text"
                android:textSize="18dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/id_ProfileImage_RelativeLayout"
                android:layout_width="match_parent"
                android:layout_weight="30"
                android:layout_marginLeft="30dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <!--  Profile Image -->

<!--                <com.mikhaellopez.circularimageview.CircularImageView-->
<!--                    android:id="@+id/toolbar_branch_Image"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:layout_centerHorizontal="true"-->
<!--                    android:layout_centerVertical="true"-->
<!--                    android:layout_centerInParent="true"-->
<!--                    android:src="@drawable/image"-->
<!--                    app:civ_border_color="#EEEEEE"-->
<!--                    app:civ_shadow="true"-->
<!--                    app:civ_shadow_color="#f4f5f9"-->
<!--                    app:civ_shadow_radius="10" />-->
                <ImageButton
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_add_24"
                    android:background="@drawable/bg_recat2"
                    android:id="@+id/add_new_notification"
                    android:visibility="gone"/>
        </RelativeLayout>

        </LinearLayout>

    </LinearLayout>



</androidx.appcompat.widget.Toolbar>



