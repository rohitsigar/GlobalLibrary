<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.ForgetPasswardStudentActivity"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="20dp"
    android:weightSum="100">


    <TextView
        android:layout_weight="5"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget Passward"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:fontFamily="@font/fjalla_one"/>
    <LinearLayout
        android:layout_weight="95"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/black"
            app:hintTextColor="@color/black"
            android:id="@+id/a"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Enter Contact Number">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:id="@+id/phone_number_forget_passward1"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>
        <ProgressBar
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/black"
            android:layout_below="@+id/editTextCode"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/black"
            app:hintTextColor="@color/black"
            android:visibility="gone"
            android:id="@+id/b"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="ENTER OTP">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:id="@+id/otp121"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/black"
            app:hintTextColor="@color/black"
            android:visibility="gone"
            android:id="@+id/c"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Enter New Passward">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:id="@+id/new_passward_student_activity"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/ResetPassward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="12dp"
            app:rippleColor="@color/black"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            app:strokeColor="@color/black"
            style="?attr/materialButtonOutlinedStyle"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/fjalla_one"
            android:text="Reset Passward"
            android:layout_marginBottom="5dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/send_otp"
            android:layout_width="match_parent"
            android:elevation="12dp"
            app:rippleColor="@color/black"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            app:strokeColor="@color/black"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/fjalla_one"
            android:text="Send Otp"
            android:layout_marginBottom="5dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/check_otp"
            android:elevation="12dp"
            app:rippleColor="@color/black"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            app:strokeColor="@color/black"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:fontFamily="@font/fjalla_one"
            android:text="Check Otp"
            android:layout_marginBottom="5dp"/>
        <Button
            android:id="@+id/resend_otp_1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:textColor="@color/black"
            android:text="Resend Otp"
            android:fontFamily="@font/fjalla_one"
            android:layout_gravity="right"
            android:textStyle="bold"
            android:elevation="12dp"
            android:layout_marginTop="5dp"/>





    </LinearLayout>


</LinearLayout>