<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.HomeStudentFragment">

                <TextView
                    android:id="@+id/show_quote"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:background="@drawable/btn_background"
                    android:text="Winners dont do diffrent Things They Do thing Diffrently"
                    android:textAlignment="center"
                    android:textColor="#464646"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:weightSum="2"
                android:layout_margin="20dp"
                android:orientation="horizontal">
                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="Mark Attandance"
                    android:id="@+id/mark_attandance"
                    android:elevation="12dp"
                    app:rippleColor="@color/black"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    app:strokeColor="@color/black"
                    app:icon="@drawable/mark_attandance"
                    app:iconGravity="textEnd"
                    app:iconTint="@color/black"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                    android:visibility="visible"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:textSize="10sp"
                    android:layout_height="wrap_content"
                    android:text="Attandance History"
                    android:id="@+id/show_attandance"
                    android:elevation="12dp"
                    app:rippleColor="@color/black"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    app:strokeColor="@color/black"
                    app:icon="@drawable/attandance_student_pallet"
                    app:iconGravity="textEnd"
                    app:iconTint="@color/black"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                    android:visibility="visible"/>

            </LinearLayout>





</LinearLayout>