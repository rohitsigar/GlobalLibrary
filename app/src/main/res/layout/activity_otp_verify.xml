<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.OtpVerify"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="100">
    <TextView
        android:layout_weight="15"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:background="@color/main_color"
        android:layout_height="0dp"
        android:text="Phone number Verification"
        android:textColor="@color/dark_main_color"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:fontFamily="@font/roboto_regular"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/setting_background"
        android:layout_weight="45">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/ic_undraw_mobile_re_q4nk"/>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="45"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/more_dark_main_color"
            android:textSize="25dp"
            android:fontFamily="@font/quicksand_regular"
            android:textStyle="normal"
            android:text="Enter OTP Number"
            android:layout_gravity="center"
            android:gravity="center"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="ENTER OTP">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:hint="ENTER OTP"
                android:textColorHint="@color/dark_main_color"
                android:fontFamily="@font/quicksand_regular"
                android:textStyle="normal"
                android:textSize="18dp"
                android:background="@drawable/setting_textview"
                android:id="@+id/otp123"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>
        <ProgressBar
            android:id="@+id/progressbar1"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/black"
            android:layout_below="@+id/editTextCode"
            android:visibility="visible"
            android:layout_gravity="center_horizontal"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/Sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:rippleColor="@color/main_color"
            app:cornerRadius="10dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/dark_main_color"
            app:strokeColor="@color/black"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:fontFamily="@font/quicksand_regular"
            android:textSize="16dp"
            android:text="Sign Up"
            android:layout_marginBottom="5dp"/>
        <Button
            android:id="@+id/resend_otp_branch"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:textColor="@color/black"
            android:text="Resend Otp"
            android:textStyle="bold"
            android:visibility="gone"
            android:fontFamily="@font/fjalla_one"
            android:layout_gravity="right"
            android:elevation="12dp"
            android:layout_marginTop="5dp"/>





    </LinearLayout>


</LinearLayout>