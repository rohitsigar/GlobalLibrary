<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="100"
    android:orientation="vertical"
    tools:context=".Fragment.HomeStudentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_weight="10">
        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:layout_height="60dp"
            android:text="Quote"
            android:id="@+id/Quote"
            android:elevation="12dp"
            app:rippleColor="@color/black"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            app:strokeColor="@color/black"
            app:icon="@drawable/ic_baseline_wb_sunny_24"
            app:iconGravity="textEnd"
            app:iconTint="@color/black"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:visibility="visible"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_height="60dp"
            android:text="Students "
            android:id="@+id/student_pallet"
            android:elevation="12dp"
            app:rippleColor="@color/black"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            app:strokeColor="@color/black"
            app:icon="@drawable/ic_baseline_person_24"
            app:iconGravity="textEnd"
            app:iconTint="@color/black"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:visibility="visible"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        android:background="@color/white"
        android:weightSum="100"
        android:orientation="vertical"
        android:layout_margin="15dp">
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_quiz_report"
            app:layout_collapseMode="pin" />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="0dp"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/report_quiz_branch"/>
        <TextView
            android:id="@+id/text_view_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="No Quiz Given By Any Student"
            android:textSize="25dp"
            android:textStyle="bold"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"></TextView>
    </LinearLayout>





</LinearLayout>