<?xml version="1.0" encoding="utf-8"?>


    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginTop="16dp"
        android:elevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksand_regular"
                        android:textStyle="bold"
                        android:text="Title"
                        android:id="@+id/Title_notification"
                        android:textColor="#3e373a"
                        android:textSize="18dp" />



                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:fontFamily="@font/quicksand_regular"
                        android:textStyle="normal"
                        android:text="Discreption"
                        android:id="@+id/discreption_notification"
                        android:textColor="#3e373a"
                        android:textSize="12dp" />



                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="6dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:background="@color/main_color"
                        android:src="@drawable/ic_baseline_wb_sunny_24"
                        app:tint="@color/dark_main_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Day  "
                        android:id="@+id/day_notification"
                        android:layout_gravity="center"
                        android:textSize="11dp"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/quicksand_regular"
                        android:textStyle="bold"
                        android:textColor="@color/dark_main_color"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/main_color"
                        android:src="@drawable/ic_baseline_access_time_24"
                        android:padding="3dp"
                        app:tint="@color/dark_main_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Time "
                        android:id="@+id/time_notification"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:textSize="11dp"
                        android:fontFamily="@font/quicksand_regular"
                        android:textStyle="bold"
                        android:textColor="@color/dark_main_color"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_date_range_24"
                        android:background="@color/main_color"
                        android:padding="3dp"
                        app:tint="@color/dark_main_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Date  "
                        android:id="@+id/date_notification"
                        android:layout_marginLeft="5dp"
                        android:textSize="11dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/quicksand_regular"
                        android:textStyle="bold"
                        android:textColor="@color/dark_main_color"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


