            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="19dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical"
                android:layout_weight="25"
                android:background="@drawable/notice_background1"
                android:layout_height="0dp">
                <RelativeLayout
                    android:layout_width="130dp"
                    android:layout_height="100dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/id_Profile_Image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/ic_educational" />

                    <ImageView
                        android:id="@+id/change_upload"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_add"
                        android:contentDescription="For more ui/ux visit www.materialuiux.com"
                        android:visibility="visible"
                        app:tint="@color/dark_main_color" />
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/change_image_button"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="For more ui/ux visit www.materialuiux.com"
                        android:visibility="gone"
                        android:background="@drawable/ic_check_done" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_main_color"
                    android:textSize="18sp"
                    android:fontFamily="@font/roboto_regular"
                    android:textStyle="bold"
                    android:id="@+id/id_fullName_TextView"
                    android:text="Branch Name"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                android:weightSum="5"
                android:layout_weight="75"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/play_quiz_background"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:contentDescription="For more ui/ux visit www.materialuiux.com"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="For more ui/ux visit www.materialuiux.com"
                        android:text="Owner Name"
                        android:textStyle="bold"
                        android:fontFamily="@font/quicksand_regular"
                        android:layout_margin="5dp"
                        android:textColor="@color/dark_main_color"
                        android:textSize="12sp" />


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/profile_background"
                        android:contentDescription="For more ui/ux visit www.materialuiux.com"
                        android:padding="3dp"
                        android:fontFamily="@font/quicksand_regular"
                        android:textStyle="bold"
                        android:id="@+id/change_owner_name"
                        android:textColor="@color/color_primary_text"
                        android:textSize="14sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:contentDescription="For more ui/ux visit www.materialuiux.com"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="For more ui/ux visit www.materialuiux.com"
                        android:text="Discription"
                        android:fontFamily="@font/quicksand_regular"
                        android:textStyle="bold"
                        android:layout_margin="5dp"
                        android:textColor="@color/dark_main_color"
                        android:textSize="12sp" />


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/profile_background"
                        android:contentDescription="For more ui/ux visit www.materialuiux.com"
                        android:padding="3dp"
                        android:id="@+id/change_discreption"
                        android:fontFamily="@font/quicksand_regular"
                        android:textStyle="bold"
                        android:layout_margin="5dp"
                        android:textColor="@color/color_primary_text"
                        android:textSize="14sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:contentDescription="For more ui/ux visit www.materialuiux.com"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="For more ui/ux visit www.materialuiux.com"
                        android:text="Library Address"
                        android:textStyle="bold"
                        android:fontFamily="@font/quicksand_regular"
                        android:layout_margin="5dp"
                        android:textColor="@color/dark_main_color"
                        android:textSize="12sp" />


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/profile_background"
                        android:contentDescription="For more ui/ux visit www.materialuiux.com"
                        android:padding="3dp"
                        android:fontFamily="@font/quicksand_regular"
                        android:textStyle="bold"
                        android:layout_margin="5dp"
                        android:id="@+id/change_owner_library_address"
                        android:textColor="@color/color_primary_text"
                        android:textSize="14sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:contentDescription="For more ui/ux visit www.materialuiux.com"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="For more ui/ux visit www.materialuiux.com"
                        android:text="Email Address"
                        android:textStyle="bold"
                        android:fontFamily="@font/quicksand_regular"
                        android:layout_margin="5dp"
                        android:textColor="@color/dark_main_color"
                        android:textSize="12sp" />


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/profile_background"
                        android:contentDescription="For more ui/ux visit www.materialuiux.com"
                        android:layout_margin="5dp"
                        android:id="@+id/change_email_id"
                        android:padding="3dp"
                        android:fontFamily="@font/quicksand_regular"
                        android:textStyle="bold"
                        android:textColor="@color/color_primary_text"
                        android:textSize="14sp" />
                </LinearLayout>
